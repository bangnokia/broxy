{
    "name": "broxy/server",
    "description": "Broxy distributed browser proxy system - PHP Workerman servers",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Broxy\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "workerman/workerman": "^4.1",
        "workerman/channel": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "start": "php start.php start",
        "start:daemon": "php start.php start -d",
        "stop": "php start.php stop",
        "restart": "php start.php restart",
        "status": "php start.php status"
    }
}

